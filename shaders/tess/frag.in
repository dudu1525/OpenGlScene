#version 410 core
in vec2 TexCoordFrag;
out vec4 FragColor;

uniform sampler2D sandTexture;


void main() {

        //vec3 color = texture(sandTexture, TexCoordFrag*100).rgb;
        vec3 col1 = texture(sandTexture, TexCoordFrag * 20.0).rgb; 
        vec3 col2 = texture(sandTexture, TexCoordFrag * 3).rgb;
        vec3 finalCol = mix(col1, col2, 0.5);

        FragColor = vec4(finalCol, 1.0);
}